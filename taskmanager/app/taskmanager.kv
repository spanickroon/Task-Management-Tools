
<Container>:
    update_services_button: update_services_button
    send_message_button: send_message_button
    open_service_button: open_service_button
    close_service_button: close_service_button
    spinner: spinner
    text_input: text_input

    
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.5, 0.1
    
        Spinner:
            id: spinner
            sync_height: True
            text: 'Please update'

    BoxLayout:
        padding: 10
        orientation: 'vertical'
        spacing: 10
        pos_hint: {'center_x': 0.5}
        size_hint: 0.5, 0.45

        TextInput:
            id: text_input
            multiline: False

        Button:
            id: update_services_button
            text: 'Update services'
            on_release: root.update()
        
        Button:
            id: send_message_button
            disabled: True
            text: 'Send message'
            on_release: root.send_message()

        Button:
            id: open_service_button
            disabled: True
            text: 'Open service'

        Button:
            id: close_service_button
            disabled: True
            text: 'Close service'
